		<graphicData>
			<texPath>Things/Item/Drug/Mashed_Ashlands_TeaDarkshade</texPath>
		</graphicData>
		<ingestible>
			<outcomeDoers>
				<li Class="IngestionOutcomeDoer_OffsetNeed">
					<need>Outdoors</need>
					<offset>0.1</offset>
				</li>
			</outcomeDoers>
		</ingestible>
		<recipeMaker>
			<researchPrerequisite>Mashed_Ashlands_AshSurvival_Advanced</researchPrerequisite>
			<skillRequirements>
				<Cooking>5</Cooking>
				<Intellectual>3</Intellectual>
			</skillRequirements>
		</recipeMaker>
		<costList>
			<Mashed_Ashlands_RawDarkshadeTramaRoot>3</Mashed_Ashlands_RawDarkshadeTramaRoot>
			<Mashed_Ashlands_RawDarkshadeScathecraw>3</Mashed_Ashlands_RawDarkshadeScathecraw>
		</costList>
	</ThingDef>
