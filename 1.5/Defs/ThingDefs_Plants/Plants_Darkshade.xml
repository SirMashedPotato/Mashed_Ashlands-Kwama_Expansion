<?xml version="1.0" encoding="utf-8" ?>
<Defs>
	<!-- ==========[Mashed_Ashlands_Plant_DarkshadeBryolux]==========-->
	<ThingDef ParentName="Mashed_Ashlands_GroundcoverBase">
		<defName>Mashed_Ashlands_Plant_DarkshadeBryolux</defName>
		<label>darkshade bryolux</label>
		<description>A blue moss only found growing deep in the caverns beneath the ashlands. It is sticky, with tangled fibers, which slows anyone walking over it.</description>
		<statBases>
			<MaxHitPoints>100</MaxHitPoints>
			<Beauty>1</Beauty>
			<Nutrition>0.3</Nutrition>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Groundcovers/Mashed_Ashlands_DarkshadeBryolux</texPath>
		</graphicData>
		<selectable>true</selectable>
		<pathCost>30</pathCost>
		<ingestible />
		<plant>
			<growMinGlow>0</growMinGlow>
			<growOptimalGlow>0</growOptimalGlow>
			<fertilityMin>0.01</fertilityMin>
			<fertilitySensitivity>0.15</fertilitySensitivity>
			<growDays>60</growDays>
			<dieIfLeafless>true</dieIfLeafless>
			<maxMeshCount>4</maxMeshCount>
			<neverBlightable>true</neverBlightable>
			<visualSizeRange>0.82~0.95</visualSizeRange>
			<sowResearchPrerequisites>
				<li>Mashed_Ashlands_AshSowing_Darkshade</li>
			</sowResearchPrerequisites>
			<sowWork>170</sowWork>
			<topWindExposure>0</topWindExposure>
			<wildClusterRadius>3</wildClusterRadius>
			<wildClusterWeight>5</wildClusterWeight>
		</plant>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>1</glowRadius>
				<glowColor>(78,226,229,0)</glowColor>
			</li>
		</comps>
	</ThingDef>
	<!-- ==========[Mashed_Ashlands_Plant_DarkshadeEntoloma]==========-->
	<ThingDef ParentName="Mashed_Ashlands_SmallMushroomBase">
		<defName>Mashed_Ashlands_Plant_DarkshadeEntoloma</defName>
		<label>darkshade entoloma</label>
		<description>A small mushroom, only found growing deep in the caverns beneath the ashlands. While the strange pale glow it produces might be somewhat unsettling to some, most find its striking colouration quite beautiful.</description>
		<statBases>
			<Beauty>10</Beauty>
			<BeautyOutdoors>10</BeautyOutdoors>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Mushrooms/Mashed_Ashlands_DarkshadeEntoloma</texPath>
		</graphicData>
		<plant>
			<growMinGlow>0</growMinGlow>
			<growOptimalGlow>0</growOptimalGlow>
			<growDays>3</growDays>
			<visualSizeRange>0.2~0.4</visualSizeRange>
			<sowResearchPrerequisites>
				<li>Mashed_Ashlands_AshSowing_Darkshade</li>
			</sowResearchPrerequisites>
			<sowWork>200</sowWork>
			<purpose>Beauty</purpose>
		</plant>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>1</glowRadius>
				<glowColor>(78,226,229,0)</glowColor>
			</li>
		</comps>
	</ThingDef>
	<!-- ==========[Mashed_Ashlands_Plant_DarkshadeMushroom]==========-->
	<ThingDef ParentName="Mashed_Ashlands_PlantBase">
		<defName>Mashed_Ashlands_Plant_DarkshadeMushroom</defName>
		<label>darkshade mushroom</label>
		<description>A small edible mushroom, only found growing deep in the caverns beneath the ashlands. Its flesh is edible, though most don't consider it very pleasant to eat. While it can only be found growing naturally underground, with enough care it can be grown almost anywhere.</description>
		<statBases>
			<MaxHitPoints>85</MaxHitPoints>
			<Nutrition>0.25</Nutrition>
			<Mashed_Ashlands_AshResistance>0.6</Mashed_Ashlands_AshResistance>
		</statBases>
		<graphicData>
			<texPath>Things/Plant/Mashed_Ashlands_DarkshadeMushroomPlant</texPath>
		</graphicData>
		<pathCost>14</pathCost>
		<plant>
			<growMinGlow>0</growMinGlow>
			<growOptimalGlow>0</growOptimalGlow>
			<fertilitySensitivity>0.8</fertilitySensitivity>
			<fertilityMin>1</fertilityMin>
			<dieIfLeafless>true</dieIfLeafless>
			<harvestedThingDef>RawFungus</harvestedThingDef>
			<harvestYield>10</harvestYield>
			<sowResearchPrerequisites>
				<li>Mashed_Ashlands_AshSowing_Darkshade</li>
			</sowResearchPrerequisites>
			<topWindExposure>0.05</topWindExposure>
			<growDays>7</growDays>
			<maxMeshCount>4</maxMeshCount>
			<visualSizeRange>0.4~0.8</visualSizeRange>
			<purpose>Food</purpose>
			<humanFoodPlant>true</humanFoodPlant>
			<wildClusterRadius>4</wildClusterRadius>
			<wildClusterWeight>200</wildClusterWeight>
			<wildOrder>2</wildOrder>
		</plant>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>2</glowRadius>
				<glowColor>(78,226,229,0)</glowColor>
			</li>
		</comps>
	</ThingDef>
	<!-- ==========[Mashed_Ashlands_GiantDarkshadeCoprinus]==========-->
	<ThingDef ParentName="Mashed_Ashlands_Plant_TreeDecorativeBase">
		<defName>Mashed_Ashlands_GiantDarkshadeCoprinus</defName>
		<label>darkshade coprinus tree</label>
		<description>A large fungal tree, only found growing deep in the caverns beneath the ashlands. While it offers nothing of practical use, most find it incredibly beautiful, though some find the strange pale glow it emits slightly unsettling. While it can only be found growing naturally underground, with enough care it can be grown almost anywhere.</description>
		<graphicData>
			<texPath>Things/Plant/Trees/Mashed_Ashlands_GiantDarkshadeCoprinus</texPath>
		</graphicData>
		<statBases>
			<Beauty>25</Beauty>
			<BeautyOutdoors>25</BeautyOutdoors>
			<Mashed_Ashlands_AshResistance>0.6</Mashed_Ashlands_AshResistance>
		</statBases>
		<plant>
			<growMinGlow>0</growMinGlow>
			<growOptimalGlow>0</growOptimalGlow>
			<fertilityMin>0.1</fertilityMin>
			<growDays>20</growDays>
			<visualSizeRange>1.3~2.4</visualSizeRange>
			<harvestWork>600</harvestWork>
			<sowResearchPrerequisites>
				<li>Mashed_Ashlands_AshSowing_Darkshade</li>
			</sowResearchPrerequisites>
			<purpose>Beauty</purpose>
			<leaflessGraphicPath>Things/Plant/Trees/Mashed_Ashlands_GiantDarkshadeCoprinus_Leafless</leaflessGraphicPath>
		</plant>
		<comps>
			<li Class="CompProperties_Glower">
				<glowRadius>3</glowRadius>
				<glowColor>(78,226,229,0)</glowColor>
			</li>
			<li Class="Mashed_Ashlands.CompProperties_EffecterAtNight">
				<effecterDef>Mashed_Ashlands_DarklightTorchbugEffecter</effecterDef>
			</li>
		</comps>
	</ThingDef>
</Defs>
