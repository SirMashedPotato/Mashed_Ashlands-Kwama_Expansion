		<graphicData>
			<texPath>Things/Plant/Trees/Mashed_Ashlands_GiantVioletCoprinus</texPath>
		</graphicData>
		<statBases>
			<Beauty>25</Beauty>
			<BeautyOutdoors>25</BeautyOutdoors>
			<Mashed_Ashlands_AshResistance>0.8</Mashed_Ashlands_AshResistance>
		</statBases>
		<plant>
			<fertilityMin>0.1</fertilityMin>
			<growDays>20</growDays>
			<visualSizeRange>1.3~2.4</visualSizeRange>
			<harvestWork>600</harvestWork>
			<sowResearchPrerequisites>
				<li>Mashed_Ashlands_AshSowing_Advanced</li>
			</sowResearchPrerequisites>
			<purpose>Beauty</purpose>
		</plant>
		<comps Inherit="False">
			<li Class="CompProperties_Glower">
				<glowRadius>3</glowRadius>
				<glowColor>(78,226,229,0)</glowColor>
			</li>
		</comps>
	</ThingDef>
</Defs>
