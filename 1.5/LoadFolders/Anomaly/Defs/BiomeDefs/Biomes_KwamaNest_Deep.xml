<?xml version="1.0" encoding="utf-8"?>
<Defs>
	<BiomeDef ParentName="Mashed_Ashlands_KwamaNestBase">
		<defName>Mashed_Ashlands_DeepKwamaNest</defName>
		<label>kwama deepnest</label>
		<modExtensions>
			<li Class="Mashed_Ashlands.BiomeProperties">
				<forceCustomCavePlants>true</forceCustomCavePlants>
				<cavePlants>
					<Mashed_Ashlands_Plant_Bloatspore>0.2</Mashed_Ashlands_Plant_Bloatspore>
					<Mashed_Ashlands_Plant_PaleEntoloma>0.1</Mashed_Ashlands_Plant_PaleEntoloma>
					<Mashed_Ashlands_Plant_PaleMushroom>0.075</Mashed_Ashlands_Plant_PaleMushroom>
					<Mashed_Ashlands_Plant_PaleGlowstalk>0.05</Mashed_Ashlands_Plant_PaleGlowstalk>
					<Mashed_Ashlands_Plant_TreeKwamacap>0.1</Mashed_Ashlands_Plant_TreeKwamacap>
					<!-- Polluted plants -->
					<Mashed_Ashlands_Plant_GlowingRussula MayRequire="Ludeon.RimWorld.Biotech">0.3</Mashed_Ashlands_Plant_GlowingRussula>
					<Mashed_Ashlands_Plant_GlowingCoprinus MayRequire="Ludeon.RimWorld.Biotech">0.3</Mashed_Ashlands_Plant_GlowingCoprinus>
					<Mashed_Ashlands_GiantGlowingCoprinus MayRequire="Ludeon.RimWorld.Biotech">0.1</Mashed_Ashlands_GiantGlowingCoprinus>
				</cavePlants>
				<dryToReplacers>
					<li>
						<originalTerrain>Gravel</originalTerrain>
						<replacedTerrain>Mashed_Ashlands_RichAshGravel</replacedTerrain>
					</li>
					<li>
						<originalTerrain>Soil</originalTerrain>
						<replacedTerrain>Mashed_Ashlands_AshSoil</replacedTerrain>
					</li>
				</dryToReplacers>
				<increasePollutedFertility>true</increasePollutedFertility>
				<otherTerrainDef>Mashed_Ashlands_RichAshGravel</otherTerrainDef>
				<otherTerrainThreshold>0.25</otherTerrainThreshold>
				<waterTerrainDef>WaterShallow</waterTerrainDef>
				<waterThreshold>0.6</waterThreshold>
			</li>
			<li Class="Mashed_Ashlands_Kwama.UnderBiomeProperties">
				<forcedCondition>Mashed_Ashlands_DeepnestDarkness</forcedCondition>
				<wildAnimals>
					<li>
						<kindDef>Rat</kindDef>
						<weight>0.2</weight>
						<maxOnMap>3</maxOnMap>
					</li>
					<li>
						<kindDef>Mashed_Ashlands_KwamaScrib</kindDef>
						<weight>0.6</weight>
						<maxOnMap>3</maxOnMap>
					</li>
					<li>
						<kindDef>Mashed_Ashlands_KwamaForager</kindDef>
						<weight>0.8</weight>
						<maxOnMap>9</maxOnMap>
					</li>
					<li>
						<kindDef>Mashed_Ashlands_KwamaWorker</kindDef>
						<weight>1</weight>
						<maxOnMap>6</maxOnMap>
					</li>
					<li>
						<kindDef>Mashed_Ashlands_KwamaWarrior</kindDef>
						<weight>1</weight>
						<maxOnMap>6</maxOnMap>
					</li>
				</wildAnimals>
			</li>
		</modExtensions>
		<plantDensity>0.3</plantDensity>
	</BiomeDef>
</Defs>